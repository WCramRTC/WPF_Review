<Window x:Class="WPF_Review.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Review"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Canvas Background="#FFD8DFA7">
        <ComboBox x:Name="cbStudents" Canvas.Left="335" Canvas.Top="66" Width="321" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="txtFirstName" Canvas.Left="118" TextWrapping="Wrap" Canvas.Top="132" Width="120"/>
        <TextBox x:Name="txtLastName" Canvas.Left="118" TextWrapping="Wrap" Canvas.Top="199" Width="120"/>
        <Label Content="First Name" Canvas.Left="50" Canvas.Top="128"/>
        <Label Content="Last Name" Canvas.Left="50" Canvas.Top="195" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button x:Name="btnAddStudent" Content="Add Student" Canvas.Left="50" Canvas.Top="241" Height="32" Width="184" Click="btnAddStudent_Click"/>

    </Canvas>
</Window>
